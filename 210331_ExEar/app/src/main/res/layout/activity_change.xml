<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeActivity">

    <TextView
        android:id="@+id/btn_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tvPIN"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="PIN번호"
        app:layout_constraintStart_toStartOf="@+id/btn_change"
        app:layout_constraintTop_toBottomOf="@+id/btn_change" />


    <EditText
        android:id="@+id/tvSendPIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="New PIN Number"
        app:layout_constraintStart_toStartOf="@+id/tvPIN"
        app:layout_constraintTop_toBottomOf="@id/tvPIN" />

    <Button
        android:id="@+id/btnSendPIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송"
        app:layout_constraintStart_toEndOf="@+id/tvSendPIN"
        app:layout_constraintTop_toTopOf="@+id/tvSendPIN" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="새 이름"
        app:layout_constraintStart_toStartOf="@+id/btn_change"
        app:layout_constraintTop_toBottomOf="@+id/tvSendPIN" />


    <EditText
        android:id="@+id/tvSendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="New Name"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <Button
        android:id="@+id/btnSendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전송"
        app:layout_constraintStart_toEndOf="@+id/tvSendName"
        app:layout_constraintTop_toTopOf="@+id/tvSendName" />

</android.support.constraint.ConstraintLayout>